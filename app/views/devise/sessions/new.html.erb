<div class="context-loader-container">
  <div class="auth-form-header">
    <h1>登录</h1>
  </div>

  <div class="auth-form-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div><%= f.label :email, "邮箱" %><br />
          <%= f.email_field :email, autofocus: true, class:"input-block" %></div>

        <div><%= f.label :password, "密码" %><br />
          <%= f.password_field :password, autocomplete: "off", class:"input-block" %></div>

        <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住密码" %></div>
        <% end -%>

        <div><%= f.submit "确定", class:"button" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>



